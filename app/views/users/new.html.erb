<h1> New User </h1>

<%= form_for(@user) do |f| %>
<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.label :email%>
	<%= f.email_field :email, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.label :password %>
	<%= f.password_field :password , class: "form-control"%>
<div class="form-group">
  Password Confirmation: <%= f.password_field :password_confirmation, class: "form-control"%> 
<div class="form-group">
<%= f.label :prosolar_password , class: "form-control"%>
	<%= text_field_tag :prosolar_password, class: "form-control" %>
</div>
<%= f.submit 'Submit', class: "btn btn-default", type:"submit"  %> 
 
<% end %>